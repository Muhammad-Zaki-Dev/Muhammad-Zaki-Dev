@model  List<OnlineShoppingMVC.Models._MainBanner>
<table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>

            <th>Banner Image</th>
            

        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
               
                <td><img src='@item.BannerImage' alt="img" width="150px" height="60px" /></td>
         
                <td><a href="javascript:void(0);" onclick="EditBanner(@item.BannerID);" class="btn btn-danger"><i class="fa fa-edit"></i></a></td>
                <td><a href="javascript:void(0);" onclick="DeleteBanner(@item.BannerID);" class="btn btn-primary"><i class="fa fa-trash"></i></a></td>


            </tr>
        }



    </tbody>
</table>


