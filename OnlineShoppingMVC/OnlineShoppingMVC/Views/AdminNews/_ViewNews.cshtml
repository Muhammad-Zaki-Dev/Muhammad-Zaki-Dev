@model  List<OnlineShoppingMVC.Models._News>
<table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
            <th>News Title</th>
            

            <th>Posted Date</th>
            <th>Image </th>
            <th>Status</th>
            <th>Description</th>

            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>


    <tbody>
      
            @foreach (var item in Model)

            {
                <tr>
                    <td>@item.NewsTitle</td>
                    <td>@item.PostedDate</td>
                    <td>@item.PostedDate</td>
                    <td><img src='@item.NewsImage' alt="" /></td>
                    <td>@item.Status</td>
                    <td><a href="#" class="btn btn-danger"><i class="fa fa-eye"></i></a></td>
                    <td><a href="#" onclick="EditBlog(@item.NewsID);" class="btn btn-danger"><i class="fa fa-edit"></i></a></td>
                    <td><a href="#" onclick="DeleteBlog(@item.NewsID);" class="btn btn-primary"><i class="fa fa-trash"></i></a></td>


                </tr>
            }

        




    </tbody>
</table>



