@model  List<OnlineShoppingMVC.Models._Product>
<table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Category Name</th>
            <th>SubCategory Name</th>
            <th>Product Price</th>
            <th>Best Seller</th>
            <th>Special Offer</th>
            <th>Trending</th>
            <th>NEw Arrival</th>
            <th>Discount</th>
            <th>Status</th>
            <th>Image</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>


    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)

            {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.CategoryName</td>
            <td>@item.SubCategoryName</td>
            <td>@item.ProductPrice</td>
            @if (item.BestSeller == 1)
            {
                <td>Yes</td>
            }
            else
            {
                <td>NO</td>
            }
            @if (item.SpecialOffer == 1)
            {
                <td>Yes</td>
            }
            else
            {
                <td>NO</td>
            }
            @if (item.Trending == 1)
            {
                <td>Yes</td>
            }
            else
            {
                <td>NO</td>
            }
            @if (item.NewArrival == 1)
            {
                <td>Yes</td>
            }
            else
            {
                <td>NO</td>
            }
            <td>@item.Discount</td>
            <td>@item.Status</td>
            <td><img src='@item.ProductImage' alt="" width="50px" height="50px" /></td>

            <td><a href="#" class="btn btn-danger"><i class="fa fa-eye"></i></a></td>
            <td><a href="#" onclick="EditProduct(@item.ProductID);" class="btn btn-danger"><i class="fa fa-edit"></i></a></td>
            <td><a href="#" onclick="DeleteProduct(@item.ProductID);" class="btn btn-primary"><i class="fa fa-trash"></i></a></td>


        </tr>
            }

        }




    </tbody>
</table>



