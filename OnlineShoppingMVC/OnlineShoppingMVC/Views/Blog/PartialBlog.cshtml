@model  List<OnlineShoppingMVC.Models._Blog>
<table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
            <th>BLog Title</th>
            <th>Posted By</th>

            <th>Posted Date</th>
            <th>Image </th>
            <th>Status</th>
            <th>Description</th>

            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>


    <tbody>

        @foreach (var item in Model)

        {
            <tr>
                <td>@item.POstTitle</td>
                <td>@item.AdminiD</td>
                <td>@item.PostedDate</td>
                <td><img src='@item.BlogImage' alt="" width="50px" height="50px" /></td>
                <td>@item.Status</td>
                <td><a href="#" class="btn btn-danger"><i class="fa fa-eye"></i></a></td>
                <td><a href="#" onclick="EditBlog(@item.BlogID);" class="btn btn-danger"><i class="fa fa-edit"></i></a></td>
                <td><a href="#" onclick="DeleteBlog(@item.BlogID);" class="btn btn-primary"><i class="fa fa-trash"></i></a></td>


            </tr>
        }




    </tbody>
</table>


