@model  List<OnlineShoppingMVC.Models._Category>
<table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
          
            <th>Category Name</th>
            <th>Description</th>

            <th>Image</th>
            <th>Status</th>
            <th>Edit </th>
            <th>Delete</th>
        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td><button class="btn btn-primary btn-round" >Views</button></td>
                <td><img src='@item.CategoryImage' alt="img" width="150px" height="60px" /></td>
                <td>@item.Status</td>
                <td><a href="javascript:void(0);" onclick="EditCategory(@item.CategoryID);" class="btn btn-danger"><i class="fa fa-edit"></i></a></td>
                <td><a href="javascript:void(0);" onclick="DeleteCategory(@item.CategoryID);" class="btn btn-primary"><i class="fa fa-trash"></i></a></td>


            </tr>
        }



    </tbody>
</table>

