@model List<OnlineShoppingMVC.Models._Product>
<div class="row shop_container">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-6">
            <div class="product">
                <div class="product_img">
                    <a href="shop-product-detail.html">
                        <img src="@item.ProductImage" alt="product_img1" height="200px" width="200px">
                    </a>
                    <div class="product_action_box">
                        <ul class="list_none pr_action_btn">
                            <li><a href="shop-compare.html" class="popup-ajax"><i class="icon-shuffle"></i></a></li>
                            <li><a href="shop-quick-view.html" class="popup-ajax"><i class="icon-magnifier-add"></i></a></li>
                            <li><a href="#"><i class="icon-heart" onclick="AddToWishListt(@item.ProductID)"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="product_info">
                    <h6 class="product_title"><a href="/ProductDetail/Index?ProductID=@item.ProductID">@item.ProductName</a></h6>
                    @if (item.Discount > 0)
                    {
                        decimal? Amount = item.ProductPrice - (item.Discount * item.ProductPrice) / 100;
                        <div class="product_price">

                            @*<input type="text" class="price no-outline"  readonly name="name" value="@Amount" id="ProductPrice" />*@
                            @*<span class="price" id="ProductPrice"></span>*@
                            <label class="price" id="ProductPrice">@Amount</label>
                            <del>@item.ProductPrice</del>
                            <div class="on_sale">
                                <span>@item.Discount % Off</span>
                            </div>

                        </div>
                    }
                    else
                    {
                        <div class="product_price">


                            <span class="price">@item.ProductPrice</span>
                            <del></del>
                            <div class="on_sale">
                                <span></span>
                            </div>

                        </div>

                    }
                    <div class="rating_wrap">
                        <div class="rating">
                            <div class="product_rate" style="width:80%"></div>
                        </div>
                        <span class="rating_num">(21)</span>
                    </div>
                    <div class="pr_desc">
                        <p>@Html.Raw(item.ProductDescription.Substring(0, 30))</p>
                    </div>
                    <div class="pr_switch_wrap">
                        <div class="product_color_switch">
                            <span class="active" data-color="#87554B"></span>
                            <span data-color="#333333"></span>
                            <span data-color="#DA323F"></span>
                        </div>
                    </div>
                    <div class="list_product_action_box">
                        <ul class="list_none pr_action_btn">
                            <li class="add-to-cart"><a href="#"><i class="icon-basket-loaded"></i> Add To Cart</a></li>
                            <li><a href="shop-compare.html" class="popup-ajax"><i class="icon-shuffle"></i></a></li>
                            <li><a href="shop-quick-view.html" class="popup-ajax"><i class="icon-magnifier-add"></i></a></li>
                            <li><a href="#"><i class="icon-heart"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }


</div>
